{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Web",
      "request": "launch",
      "type": "node",
      "program": "${workspaceFolder}/scripts/web.js",
      "envFile": "${workspaceFolder}/.env.web",
      "serverReadyAction": {
        "pattern": "on http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Start Server",
      "request": "launch",
      "type": "node",
      "program": "${workspaceFolder}/server.js",
      "preLaunchTask": "build:server",
      "envFile": "${workspaceFolder}/.env.server"
    },
    {
      "name": "Test: File",
      "request": "launch",
      "type": "node",
      "program": "test/${relativeFileDirname}/${fileBasenameNoExtension}.js",
      "preLaunchTask": "build:test"
    },
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": ["--remote-debugging-port=9223", "index.desktop.js"],
      "preLaunchTask": "build:web",
      "envFile": "${workspaceFolder}/.env.web"
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "Start Desktop",
      "configurations": ["Electron: Main", "Electron: Renderer"]
    }
  ]
}
